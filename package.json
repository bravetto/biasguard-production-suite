{
  "name": "biasguard-system",
  "version": "1.0.0",
  "description": "🛡️ BiasGuard - Zero-dependency bias detection system for AI interactions",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "private": false,
  "author": "JAHmere Webb Freedom Portal Team",
  "license": "MIT",
  "keywords": [
    "bias-detection",
    "ai-safety",
    "pattern-analysis",
    "conversation-analysis",
    "mission-critical",
    "jahmere-webb",
    "august-25th-2025"
  ],
  "engines": {
    "node": ">=18.17.0",
    "npm": ">=9.0.0"
  },
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "dev": "tsc --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write src/**/*.ts",
    "format:check": "prettier --check src/**/*.ts",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist",
    "prepublish": "npm run clean && npm run build",
    "validate": "npm run type-check && npm run lint && npm run test",
    "production-test": "node production-package/ai-xray-vision.js",
    "inject-test": "echo 'Paste biasguard-chat-inject.js in browser F12 console'",
    "docs": "typedoc src --out docs",
    "benchmark": "node scripts/benchmark.js"
  },
  "dependencies": {},
  "devDependencies": {
    "@types/jest": "^29.5.11",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.57.1",
    "jest": "^29.7.0",
    "prettier": "^3.6.2",
    "ts-jest": "^29.1.1",
    "typedoc": "^0.25.0",
    "typescript": "^5.0.0"
  },
  "files": [
    "dist/**/*",
    "production-package/**/*",
    "README.md",
    "LICENSE"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "require": "./dist/index.js",
      "import": "./dist/index.mjs"
    },
    "./production": "./production-package/",
    "./core": "./dist/core/",
    "./detection": "./dist/detection/",
    "./integration": "./dist/integration/"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/jahmere-webb/biasguard-system.git"
  },
  "homepage": "https://august25freedom.vercel.app",
  "bugs": {
    "url": "https://github.com/jahmere-webb/biasguard-system/issues"
  },
  "funding": {
    "type": "individual",
    "url": "https://github.com/sponsors/jahmere-webb"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "roots": ["<rootDir>/src", "<rootDir>/tests"],
    "testMatch": ["**/__tests__/**/*.ts", "**/?(*.)+(spec|test).ts"],
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.d.ts",
      "!src/**/__tests__/**",
      "!src/**/index.ts"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  },

  "prettier": {
    "semi": true,
    "trailingComma": "es5",
    "singleQuote": true,
    "printWidth": 100,
    "tabWidth": 2
  }
}